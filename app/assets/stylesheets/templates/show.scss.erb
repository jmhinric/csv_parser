@import "colors";

#template-show {
  // TODO remove 800px styling once background image styling has been fixed.
  min-height: 800px;

  .wrapper-seventy {
    width: 70%;
    margin: 0 auto;

    .small-link {
      margin-bottom: 20px;
    }

    .template-info {
      text-align: center;
      padding-bottom: 30px;

      .template-header {
        padding-top: 30px;
        padding-bottom: 30px;

        p {
          padding-bottom: 10px;
        }

        .small-link {
          text-align: center;
        }
      }

      form {
        margin: 0 auto;

        .file-input-header {
          padding-bottom: 7px;
          text-decoration: underline;
        }

        .input-group {
          padding-bottom: 15px;
        }

        .template-execute {
          text-align: right;
          padding-bottom: 15px;

          input[type=file] {
            margin: 0 auto;
            size: 60;
          }
        }

        label {
          padding-right: 15px;
          font-weight: bold;
        }
      }
    }

    .data-transfers-info {
      p {
        text-align: center;
      }
    }

    h2 {
      padding-bottom: 10px;
    }

    h2, h3 {
      text-align: center;
    }

    .file-group {
      text-align: center;
      padding: 30px 30px 0;
      margin-bottom: 40px;
      border-radius: 2px;
    }

    .transfer-groups-container {
      .transfer-group {
        margin-bottom: 30px;

        .spaced-arrow {
          font-weight: bolder;
          padding: 0 10px;
        }
      }

      table {
        margin: 0 auto;

        th {
          font-size: 1.1em;
          background-color: $light-gray;
        }

        th, td {
          padding: 5px 13px;
        }

        .table-row-odd {
          background-color: $lighter-gray;
        }
      }
    }
  }
}
