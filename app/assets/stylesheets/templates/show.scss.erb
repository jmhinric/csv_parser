@import "colors";

#template-show {
  // TODO remove 800px styling once background image styling has been fixed.
  min-height: 800px;

  .wrapper-seventy {
    width: 70%;
    margin: 0 auto;

    .template-info {
      text-align: center;
      padding-bottom: 30px;

      .template-header {
        padding-top: 30px;
        padding-bottom: 30px;

        p {
          padding-bottom: 10px;
        }

        .small-link {
          text-align: center;
        }
      }

      form {
        margin: 0 auto;

        .file-input-header {
          padding-bottom: 7px;
        }

        .input-group {
          padding-bottom: 15px;
        }

        .template-execute {
          text-align: right;
          padding-bottom: 15px;

          input[type=file] {
            margin: 0 auto;
            size: 60;
          }
        }

        label {
          padding-right: 15px;
          font-weight: bold;
        }
      }
    }

    .data-transfers-info {
      p {
        text-align: center;
      }
    }

    h2 {
      padding-bottom: 10px;
    }

    h2, h3 {
      text-align: center;
    }
  }
}
