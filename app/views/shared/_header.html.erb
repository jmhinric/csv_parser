<header>
  <div id="navbar" class="Grid">
    <div class="Grid-cell u-size3of12">
      <div class="logo">
        <a title="Evergreen Data Services" href="/">
          <h2>Evergreen</h2><span>Data Services</span>
          <% image_tag "", class:"home-logo" %>
        </a>
      </div>
    </div>
    <div class="Grid-cell u-size9of12 menus">
      <div class="login-container">
        <ul class="login">

          <% if current_user %>
            <li class="border-right">
              <%= link_to current_user.email, user_path(current_user) %>
            </li>
            <li class="border-right">
              <%= link_to "Log Out", "/users/sign_out", method: "delete" %>
            </li>
          <% else %>
            <li class="border-right">
              <%= link_to "Log In","/users/sign_in" %>
            </li>
          <% end %>
          <li>
            <a href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
