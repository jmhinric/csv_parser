<main id="task-show" class="centered-container">
  <div class="small-link"><%= link_to 'Back to My Tasks', user_path(current_user) %></div>

  <section class="task-info">
    <div class="task-header">
      <h2><%= @task.name %></h2>
      <p><%= @task.description %></p>
    </div>

    <div class="Grid form-container">
      <%= form_tag("#{@task.id}/execute.xlsx", multipart: true) do %>
        <% @task.origin_files.order(:position).each do |origin_file| %>
          <div class="Grid task-execute">
            <div class="Grid-cell u-size1of2">
              <%= label_tag origin_file.name_as_param, "#{origin_file.name}" %>
            </div>
            <div class="Grid-cell u-size1of2">
              <%= file_field_tag origin_file.name_as_param %>
            </div>
          </div>
        <% end %>

        <%= submit_tag('Generate Report', class: 'submit button') %>
      <% end %>
    </div>
  </section>

  <h3>Data transfers:</h3>

  <% @task.origin_files.each do |origin_file| %>
    <div class="file-group">
      <h3><%= origin_file.name %></h3>
      <div class="transfer-groups-container">
        <% origin_file.transfers_by_column_and_destination_worksheet.each do |groups| %>
          <% groups.each do |data_transfers| %>
            <div class="transfer-group">
              <% data_transfers.each do |data_transfer| %>
                <p>
                  <%= data_transfer[:from] %> of <%= data_transfer[:origin_file] %>, worksheet <%= data_transfer[:origin_worksheet] %>
                  <strong class="spaced-arrow"> => </strong>
                  <%= data_transfer[:to] %> of <%= data_transfer[:destination_file] %>, worksheet <%= data_transfer[:destination_worksheet] %>
                </p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <br>
  <% end %>

  <div class="small-link"><%= link_to 'Back to My Tasks', user_path(current_user) %></div>
</main>
